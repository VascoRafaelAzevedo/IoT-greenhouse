# .env.local - Para desenvolvimento local (fora do Docker)
# Copia este ficheiro para .env quando executares a API localmente
# NÃO commitar este ficheiro

# Core Environment
ENVIRONMENT=development
SERVICE_NAMESPACE=gardenaway

# Database - USA LOCALHOST para desenvolvimento local
DB_USER=postgres
DB_PASSWORD=change_me_strong_pass
DB_NAME=greenhouse
DB_NAME_TEST=greenhouse_test
DB_PORT=5432
DB_HOST=localhost                    # ⚠️ LOCALHOST para dev local (não "postgres")
DB_POOL_MIN=1
DB_POOL_MAX=10
DB_SSLMODE=disable

# TimescaleDB
DB_TELEMETRY_RETENTION_DAYS=365
DB_SETPOINT_RETENTION_DAYS=365

# MQTT - USA LOCALHOST para desenvolvimento local
MQTT_HOST=localhost                  # ⚠️ LOCALHOST para dev local (não "mosquitto")
MQTT_PORT=1883
MQTT_QOS_DEFAULT=1
MQTT_TELEMETRY_TOPIC=telemetry/#
MQTT_COMMAND_TOPIC=commands

# API
API_PORT=5000
API_BIND=0.0.0.0
API_SECRET_KEY=change_me_api_secret
API_TOKEN=change_me_token
JWT_SECRET=change_me_jwt_secret
JWT_EXP_MINUTES=60
JWT_EXPIRY_DAYS=30
CORS_ALLOWED_ORIGINS=*
LOG_LEVEL=INFO
